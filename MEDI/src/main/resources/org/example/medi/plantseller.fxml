<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.medi.PlantSellerController"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15; -fx-background-color: #2c3e50;">
            <Label text="Plant Seller Dashboard" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Profile" onAction="#handleProfile"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <Label text="Your Plants Inventory" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <ListView fx:id="plantList" prefHeight="400"
                      style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
            <Label text="Add/Edit Plant Details" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <GridPane hgap="15" vgap="15" style="-fx-padding: 0 0 10 0;">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30" halignment="RIGHT"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>

                <!-- Row 0: Name -->
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="nameField" promptText="Plant Name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Row 1: Description -->
                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="descField" promptText="Short description" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Row 2: Price -->
                <Label text="Price (BDT):" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="priceField" promptText="e.g. 120.50" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Row 3: Category -->
                <Label text="Category:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="categoryField" promptText="e.g. Medicinal, Flowering" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Row 4: Rating -->
                <Label text="Rating (0-5):" GridPane.rowIndex="4" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="ratingField" promptText="Number between 0-5" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- Row 5: Seller Shop -->
                <Label text="Seller Shop:" GridPane.rowIndex="5" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="sellerShopField" promptText="Your shop name" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <!-- Row 6: Image -->
                <Label text="Image:" GridPane.rowIndex="6" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
                    <TextField fx:id="imageField" promptText="Image path" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="browseBtn" text="Browse" onAction="#handleBrowse"
                            style="-fx-background-color: #7f8c8d; -fx-text-fill: white;"/>
                </HBox>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="addBtn" text="Add Plant" onAction="#addPlant"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 120;"/>
                <Button fx:id="updateBtn" text="Update Plant" onAction="#updatePlant"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 120;"/>
                <Button fx:id="deleteBtn" text="Delete Plant" onAction="#deletePlant"
                        style="-fx-background-color: #d35400; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 120;"/>
                <Button text="Clear Fields" onAction="#clearFields"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 120;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
