<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.medi.CartController"
      style="-fx-padding: 20;">

    <Label text=" Your Cart" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ListView fx:id="cartList" prefHeight="250" prefWidth="400"/>

    <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-pref-width: 300;"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Checkout" onAction="#handleCheckout" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        <Button text="Back" onAction="#goBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>
</VBox>