<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.medi.ProfileSellerController"
      style="-fx-background-color: #e6e6fa;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Seller Profile">
        <font>
            <Font name="Arial Bold" size="20"/>
        </font>
    </Label>
    <StackPane>
        <ImageView fx:id="profileImageView" fitHeight="200" fitWidth="200" preserveRatio="true">
            <effect>
                <Glow/>
            </effect>
        </ImageView>
    </StackPane>
    <Button fx:id="changeImageBtn" text="Change Profile Image" onAction="#handleChangeImage" disable="true"/>
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="120"/>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
        </columnConstraints>
        <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" editable="false" promptText="Enter email"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" editable="false" promptText="Enter username"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" editable="false" promptText="Enter phone number"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" editable="false" promptText="Enter address"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label text="Role:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="roleField" editable="false" promptText="Enter role"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Label text="Shop Name:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="shopNameField" editable="false" promptText="Enter shop name"
                   GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        <Label text="Shop Location:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="shopLocationField" editable="false" promptText="Enter shop location"
                   GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>
    <HBox spacing="10">
        <Button fx:id="editBtn" text="Edit Profile" onAction="#handleEdit"/>
        <Button fx:id="saveBtn" text="Save" onAction="#handleSave" visible="false"/>
        <Button fx:id="backBtn" text="Back" onAction="#handleBack"/>
    </HBox>
</VBox>