<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="403.0" prefWidth="352.0" spacing="20"
      style="-fx-background-color: #e8f5e9;"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.medi.LandingController">

   <padding>
      <Insets bottom="40" left="40" right="40" top="40" />
   </padding>

   <!-- App Logo and Title -->
   <VBox alignment="CENTER" spacing="10">
      <ImageView fx:id="appLogoImage" fitHeight="100" fitWidth="100" preserveRatio="true">
            <Image url="@image/plant.png" />
         <effect>
            <DropShadow color="#388e3c" radius="5" />
         </effect>
      </ImageView>
      <Label style="-fx-text-fill: #2e7d32;" text="MEDI-Plant Marketplace">
         <font>
            <Font name="System Bold" size="24" />
         </font>
         <effect>
            <Glow level="0.8" />
         </effect>
      </Label>
   </VBox>

   <!-- Role Selection Buttons -->
   <VBox alignment="CENTER" spacing="15">
      <Button fx:id="sellerButton" onAction="#goToSellerPage"
              style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 200;"
              text="I'm a Seller">
         <padding>
            <Insets bottom="10" left="20" right="20" top="10" />
         </padding>
         <effect>
            <DropShadow color="#2e7d32" radius="3" />
         </effect>
      </Button>

      <Button fx:id="buyerButton" onAction="#goToBuyerPage"
              style="-fx-background-color: #0288d1; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 200;"
              text="I'm a Buyer">
         <padding>
            <Insets bottom="10" left="20" right="20" top="10" />
         </padding>
         <effect>
            <DropShadow color="#01579b" radius="3" />
         </effect>
      </Button>
   </VBox>

   <!-- Footer -->
   <Label style="-fx-text-fill: #616161;" text="Â© 2025 Plant Marketplace">
      <font>
         <Font size="10" />
      </font>
   </Label>
</VBox>
