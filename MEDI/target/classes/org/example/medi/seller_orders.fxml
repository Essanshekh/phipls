<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.medi.SellerOrdersController" spacing="10"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <Label text="Your Orders" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="ordersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="productColumn" text="Product" prefWidth="150"/>
            <TableColumn fx:id="buyerColumn" text="Buyer" prefWidth="120"/>
            <TableColumn fx:id="quantityColumn" text="Quantity"/>
            <TableColumn fx:id="priceColumn" text="Price"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="120"/>
        </columns>
    </TableView>

    <Button text="Back" onAction="#handleBack" prefWidth="100"/>
</VBox>